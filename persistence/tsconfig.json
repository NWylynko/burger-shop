{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,

    "paths": {
      "@/*": ["./src/*"]
    },

    // "bun-types" is the important part
    "types": ["bun-types"]
  },
  "exclude": [
    "./src/functions/_empty.ts"
  ]
}
